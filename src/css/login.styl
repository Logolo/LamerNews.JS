#login
  width 650px
  margin 40px auto
  overflow hidden

  form
    width 200px
    padding 10px 20px
    float left
    font-family "lucida grande", tahoma, verdana, arial, sans-serif
    font-size 12px

    p.field
      margin 4px 0
      padding 5px 10px
      label
        color #666
        display inline-block
        font-weight bold
        padding-bottom 2px
        width 80px
        &:after
          content ':'
          margin-left 2px
          font-weight normal
          color #666

      input
        background-color #FCFFEB
        color #666
        border 1px solid #AAB4A0
        padding 3px 5px
        border-radius 2px
        width 180px
        &:focus
          outline 0
          border-color rgba(82, 168, 236, 0.8)
          box-shadow 0 0 6px rgba(100, 100, 100, 0.2)

    p.register
      float left
      margin 12px 0 0 10px
      label
        margin-left 4px

    input[type=submit]
      float right
      margin-top 5px

#external
  width 300px
  height 180px
  float right
  border-left 1px dashed #ccc
  position relative
  padding-left 60px
  &:before
    content 'or'
    font-size 28px
    color #888
    background-color #fff
    border 1px dashed #aaa
    box-shadow 0 0 10px #ddd
    border-radius 30px
    padding 10px
    display inline-block
    width 36px
    height 36px
    text-align center
    position absolute
    top 60px
    left -30px

  p
    font-size 20px
    text-align center
  a
    text-indent -9999px
    background-position center 2px
    background-repeat no-repeat
    display inline-block
    width 120px
    height 45px
    border 1px solid #eee
    border-radius 5px
    box-shadow 0 1px 5px #eee
    margin 4px 10px
    background-color #f2f2f0
    -webkit-transition all 0.2s ease-out
  a:hover
    border-color #bbb
    box-shadow 1px 2px 6px #ddd
    background-color #f8f8f2
  .twitter
    background-image url('/img/twitter.png')
  .github
    background-image url('/img/github.png')
    